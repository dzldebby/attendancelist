<div class="row clearfix">
  <% if attendance_item.completed? %>
      <div class="completed">
        <%= link_to "Mark as complete", complete_attendance_list_attendance_item_path(@attendance_list, attendance_item.id), method: :patch %>
      </div>
      <div class="attendance_item">
      <p style ="opacity: 0.4;"><strike><%= attendance_item.content %> </strike></p>
      </div>
      <div class="trash">
      <%=link_to "Delete", attendance_list_attendance_item_path(@attendance_list, attendance_item.id), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
      </div>
  <% else %>
      <div class="completed">
        <%= link_to "Mark as complete", complete_attendance_list_attendance_item_path(@attendance_list, attendance_item.id), method: :patch %>
      </div>
      <div class="attendance_item">
        <p><%= attendance_item.content %></p>
      </div>
      <div class="trash">
        <%=link_to "Delete", attendance_list_attendance_item_path(@attendance_list, attendance_item.id), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>
      </div>
   <% end %>
</div>